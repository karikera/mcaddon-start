    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch {{name}}",
            "type": "shell",
            "command": "webpack",
            "problemMatcher":"$ts-webpack-watch",
            "args": [
                "-w"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        }
    ]
}