{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch",
            "type": "shell",
            "command": "node_modules\\.bin\\webpack",/*<<<!javascript*/
            "problemMatcher":"$ts-webpack-watch",/*>>>*/
            "args": [
                "-w"
            ],
            "group": "build"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "node_modules\\.bin\\webpack",/*<<<!javascript*/
            "problemMatcher":"$ts-webpack",/*>>>*/
            "group": "build"
        },
        {
            "label": "Build & Zip to .mcaddon",
            "type": "shell",
            "command": "node_modules\\.bin\\webpack && mcaddon-start zip behavior_pack_link \"dist/{{name}}.mcaddon\"",
            "problemMatcher":"$ts-webpack",
            "group": "build"
        }
    ]
}